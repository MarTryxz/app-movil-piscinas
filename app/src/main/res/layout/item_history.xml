<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicador de fecha -->
        <View
            android:id="@+id/dateIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@drawable/indicator_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Fecha y hora -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Ene 2025"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/dateIndicator"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/dateIndicator"
            app:layout_constraintTop_toBottomOf="@id/dateText" />

        <!-- Contenedor de mediciones -->
        <LinearLayout
            android:id="@+id/measurementsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/dateIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeText">

            <!-- pH Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/measurement_background_ph"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pH"
                    android:textSize="12sp"
                    android:textColor="@color/ph_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.2"
                    android:textSize="24sp"
                    android:textColor="@color/ph_color"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/phStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Óptimo"
                    android:textSize="10sp"
                    android:textColor="@color/ph_color"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Temperatura Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/measurement_background_temp"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp"
                    android:textSize="12sp"
                    android:textColor="@color/temp_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tempValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24°C"
                    android:textSize="24sp"
                    android:textColor="@color/temp_color"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tempStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textSize="10sp"
                    android:textColor="@color/temp_color"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
